unit UPesqVendas;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, U_PesqBase, Data.FMTBcd,
  Datasnap.DBClient, Datasnap.Provider, Data.SqlExpr, Data.DB, Data.Win.ADODB,
  Vcl.StdCtrls, Vcl.Buttons, Vcl.ExtCtrls, Vcl.Grids, Vcl.DBGrids;

type
  TFrmPesqVendas = class(Tfrm_PesqBase)
    CDSVEN_ID: TIntegerField;
    CDSVEN_TOTAL: TFMTBCDField;
    CDSVEN_OBSERVACAO: TStringField;
    chkNumVendas: TCheckBox;
    procedure btn_confirmaClick(Sender: TObject);
    procedure chkNumVendasClick(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  FrmPesqVendas: TFrmPesqVendas;

implementation

uses
  U_DMRet;
{$R *.dfm}

procedure TFrmPesqVendas.btn_confirmaClick(Sender: TObject);
var
  search: string;
begin
  inherited;
  search := Trim(edt_pesq.Text);
  SearchByParams([search+'%']);
end;

procedure TFrmPesqVendas.chkNumVendasClick(Sender: TObject);
begin
  rgTipoBusca.Enabled := chkNumVendas.Checked;

end;

end.
